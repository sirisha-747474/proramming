#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;
    
    printf("Enter the value of n: ");
    scanf("%d", &n);
    
    for (int i = 1; i <= n; i++) {
        sum += 1.0 / i; // add the reciprocal of each number to the sum
    }
    
    printf("Sum of the expression 1+1/2+1/3+1/4...+1/n = %f\n", sum);
    
    return 0;
    }
